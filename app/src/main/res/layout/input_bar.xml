<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_bar_height"
    android:background="@color/colorPrimary"
    android:layout_gravity="bottom">
        <EditText
            android:hint="@string/new_task"
            android:inputType="text"
            android:background="@android:color/white"
            android:layout_marginLeft="@dimen/input_bar_field_margin_horizontal"
            android:layout_marginRight="@dimen/input_bar_field_margin_horizontal"
            android:layout_marginTop="@dimen/input_bar_field_margin_vertical"
            android:layout_marginBottom="@dimen/input_bar_field_margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</LinearLayout>